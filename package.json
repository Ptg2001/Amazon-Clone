{
  "name": "amazon-clone-mern",
  "version": "1.0.0",
  "description": "Amazon e-commerce clone built with MERN stack",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm:backend\" \"npm:frontend\"",
    "backend": "npm --prefix backend run dev",
    "frontend": "npm --prefix frontend run dev",
    "start": "npm run dev",
    "build": "npm --prefix frontend run build",
    "install-all": "npm ci --prefix backend && npm ci --prefix frontend",
    "build:netlify": "npm ci --prefix frontend && npm --prefix frontend run build && npm ci --prefix netlify/functions",
    "dev:netlify": "netlify dev"
  },
  "keywords": [
    "amazon",
    "ecommerce",
    "mern",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Amazon Clone Developer",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.17.2",
    "razorpay": "^2.9.6",
    "stripe": "^14.7.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.9.2",
    "netlify-cli": "^17.0.0"
  }
}
